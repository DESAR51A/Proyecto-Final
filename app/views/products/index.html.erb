<%- model_class = Product -%>
<div class="page-header">
  
  <h1>Productos</h1>
  
</div>

<%= link_to t('.new', :default => "Agregar"), new_product_path, :class => 'btn btn-primary' %>
<br>
<br>

<table id="datatable" class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:cod_product) %></th>
      <th><%= model_class.human_attribute_name(:nom_product) %></th>
      <th>Categoria</th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.id, product_path(product) %></td>
        <td><%= product.cod_product %></td>
        <td><%= product.nom_product %></td>
        <td><%= product.category_name %></td>
        <td><%= number_to_currency product.price %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


