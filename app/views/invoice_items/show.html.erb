<%- model_class = InvoiceItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cod_producto) %>:</strong></dt>
  <dd><%= @invoice_item.cod_producto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:precio_unit) %>:</strong></dt>
  <dd><%= @invoice_item.precio_unit %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descuento) %>:</strong></dt>
  <dd><%= @invoice_item.descuento %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cantidad) %>:</strong></dt>
  <dd><%= @invoice_item.cantidad %></dd>
  <dt><strong><%= model_class.human_attribute_name(:costo) %>:</strong></dt>
  <dd><%= @invoice_item.costo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:invoice_id) %>:</strong></dt>
  <dd><%= @invoice_item.invoice_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              invoice_items_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_invoice_item_path(@invoice_item), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              invoice_item_path(@invoice_item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
