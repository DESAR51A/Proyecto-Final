<%= simple_form_for @reservation, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :fec_reserva %>
  <%= error_span(@reservation[:fec_reserva]) %>
  <%= f.input :can_persona %>
  <%= error_span(@reservation[:can_persona]) %>
  <%= f.input :comentario %>
  <%= error_span(@reservation[:comentario]) %>
  <%= f.association :event %>
  <%= error_span(@reservation[:event_id]) %>
  <%= f.association :client %>
  <%= error_span(@reservation[:client_id]) %>
  <%= f.association :room %>
  <%= error_span(@reservation[:room]) %>
  <%= f.association :shop %>
  <%= error_span(@reservation[:shop]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reservations_path, :class => 'btn btn-default' %>
<% end %>
