<%- model_class = Reservation -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Reservaciones" %></h1>
</div>

<%= link_to t('.new', :default => "Agregar"), new_reservation_path, :class => 'btn btn-primary' %>
<br>
<br>

<table id="datatable" class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:fec_reserva) %></th>
      <th><%= model_class.human_attribute_name(:can_persona) %></th>
      <th><%= model_class.human_attribute_name(:comentario) %></th>
      <th><%= model_class.human_attribute_name(:event_id) %></th>
      <th><%= model_class.human_attribute_name(:client_id) %></th>
      <th><%= model_class.human_attribute_name(:room_name) %></th>
      <th><%= model_class.human_attribute_name(:shop_name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= link_to reservation.id, reservation_path(reservation) %></td>
        <td><%= reservation.fec_reserva %></td>
        <td><%= reservation.can_persona %></td>
        <td><%= reservation.comentario %></td>
        <td><%= reservation.event_id %></td>
        <td><%= reservation.client_id %></td>
        <td><%= reservation.room_id %></td>
        <td><%= reservation.shop_id %></td>
        <td><%=l reservation.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_reservation_path(reservation), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      reservation_path(reservation),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

