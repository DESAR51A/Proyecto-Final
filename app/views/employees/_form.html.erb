<%= simple_form_for @employee, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nom_emp %>
  <%= error_span(@employee[:nom_emp]) %>
  <%= f.input :dni %>
  <%= error_span(@employee[:dni]) %>
  <%= f.input :phone %>
  <%= error_span(@employee[:phone]) %>
  <%= f.association :employee_role %>   
  <%= error_span(@employee[:employee_role]) %>
  <%= f.input :email %>
  <%= error_span(@employee[:email]) %>


  <% if @employee.persisted?  %>
    <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
    <%= error_span(@employee[:password]) %>
    <%= f.input :password_confirmation, required: false %>
    <%= error_span(@employee[:password_confirmation]) %>
  <% else %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= error_span(@employee[:password]) %>
    <%= f.input :password_confirmation, required: true %>
    <%= error_span(@employee[:password_confirmation]) %>
  <% end %>


  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                employees_path, :class => 'btn btn-default' %>
<% end %>
