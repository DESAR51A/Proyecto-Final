<%= simple_form_for @employee, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nom_emp %>
  <%= error_span(@employee[:nom_emp]) %>
  <%= f.input :dni %>
  <%= error_span(@employee[:dni]) %>
  <%= f.input :phone %>
  <%= error_span(@employee[:phone]) %>
  <%= f.association :employee_role %>   
  <%= error_span(@employee[:employee_role]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                employees_path, :class => 'btn btn-default' %>
<% end %>
