<%= simple_form_for @reservation, :url => url_for(:action => 'add_reservation', :controller => 'costumers'), :method => 'post', :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :shop, label: 'Local' %>
  <%= error_span(@reservation[:shop]) %>
  <%= f.association :room, label: 'Sala' %>
  <%= error_span(@reservation[:room]) %>
  <%= f.input :fec_reserva, label: 'Fecha Reserva' %>
  <%= error_span(@reservation[:fec_reserva]) %>
  <%= f.input :can_persona, label: 'Cantidad Personas' %>
  <%= error_span(@reservation[:can_persona]) %>
  <%= f.input :comentario, label: 'Comentario (opcional)' %>
  <%= error_span(@reservation[:comentario]) %>
  <%= f.association :event, label: 'Evento (opcional)' %>
  <%= error_span(@reservation[:event_id]) %>

  <%= f.button :submit, 'Enviar Reserva', :class => 'btn-primary' %>

<% end %>
