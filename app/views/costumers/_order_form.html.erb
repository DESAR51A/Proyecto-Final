<%= simple_form_for @order, :url => url_for(:action => 'add_order', :controller => 'costumers'), :method => 'post', :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.association :reservation, collection: Reservation.from_client(current_client), label: 'Reserva'%>
  <%= error_span(@order[:reservation]) %>
  <%= f.association :product, label: 'Producto'%>
  <%= error_span(@order[:product]) %>
  <%= f.input :cantidad, label: 'Cantidad'%>
  <%= error_span(@order[:cantidad]) %>


  <%= f.button :submit, 'Enviar Pedido', :class => 'btn-primary' %>

<% end %>
