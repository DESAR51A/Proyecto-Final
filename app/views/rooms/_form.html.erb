<%= simple_form_for @room, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :cod_room %>
  <%= error_span(@room[:cod_room]) %>
  <%= f.input :nom_room %>
  <%= error_span(@room[:nom_room]) %>
  <%= f.input :estado %>
  <%= error_span(@room[:estado]) %>
  <%= f.input :capacidad %>
  <%= error_span(@room[:capacidad]) %>
  <%= f.association :shop %> 
  <%= error_span(@room[:shop]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                rooms_path, :class => 'btn btn-default' %>
<% end %>
