<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :name, label: 'Nombre', autofocus: true %>
    <%= error_span(@client[:name]) %>
    <%= f.input :dni, label: 'DNI' %>
    <%= error_span(@client[:dni]) %>
    <%= f.input :birth, label: 'Fecha Nacimiento', start_year: Date.today.year - 90 %>
    <%= error_span(@client[:birth]) %>
    <%= f.input :phone, label: 'Teléfono' %>
    <%= error_span(@client[:phone]) %>
      
    <%= f.input :email, label: 'Correo' %>
    <%= error_span(@client[:email]) %>
    <%= f.input :password, label: 'Contraseña', required: true, hint: ("Mínimo #{@minimum_password_length} carácteres" if @minimum_password_length) %>
    <%= error_span(@client[:password]) %>
    <%= f.input :password_confirmation, label: 'Confirmar Contraseña', required: true %>
    <%= error_span(@client[:password_confirmation]) %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "clients/shared/links" %>
