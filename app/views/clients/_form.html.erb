<%= simple_form_for @client, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :name, label: 'Nombre' %>
  <%= error_span(@client[:name]) %>
  <%= f.input :dni, label: 'DNI' %>
  <%= error_span(@client[:dni]) %>
  <%= f.input :email, label: 'Correo' %>
  <%= error_span(@client[:email]) %>
  <%= f.input :birth, label: 'Fecha Nacimiento' %>
  <%= error_span(@client[:birth]) %>
  <%= f.input :phone, label: 'Teléfono' %>
  <%= error_span(@client[:phone]) %>
    
  <% if @client.persisted?  %>
    <%= f.input :password, autocomplete: "off", hint: "Deje el campo en blanco si no desea actualizar", label: 'Contraseña', required: false %>
    <%= error_span(@client[:password]) %>
    <%= f.input :password_confirmation, label: 'Confirmar Contraseña', required: false %>
    <%= error_span(@client[:password_confirmation]) %>
  <% else %>
    <%= f.input :password, label: 'Contraseña', required: true, hint: ("Mínimo #{@minimum_password_length} carácteres" if @minimum_password_length) %>
    <%= error_span(@client[:password]) %>
    <%= f.input :password_confirmation, label: 'Confirmar Contraseña', required: true %>
    <%= error_span(@client[:password_confirmation]) %>
  <% end %>


  <%= f.button :submit, 'Grabar', :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                clients_path, :class => 'btn btn-default' %>
<% end %>
