<%= simple_form_for @client, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :name %>
  <%= error_span(@client[:name]) %>
  <%= f.input :dni %>
  <%= error_span(@client[:dni]) %>
  <%= f.input :email %>
  <%= error_span(@client[:email]) %>
  <%= f.input :birth %>
  <%= error_span(@client[:birth]) %>
  <%= f.input :phone %>
  <%= error_span(@client[:phone]) %>
    
  <% if !@client.persisted?  %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= error_span(@client[:password]) %>
    <%= f.input :password_confirmation, required: true %>
    <%= error_span(@client[:password_confirmation]) %>
  <% end %>


  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                clients_path, :class => 'btn btn-default' %>
<% end %>
