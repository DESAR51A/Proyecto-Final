<%= simple_form_for @client, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :name %>
  <%= error_span(@client[:name]) %>
  <%= f.input :dni %>
  <%= error_span(@client[:dni]) %>
  <%= f.input :email %>
  <%= error_span(@client[:email]) %>
  <%= f.input :birth %>
  <%= error_span(@client[:birth]) %>
  <%= f.input :phone %>
  <%= error_span(@client[:phone]) %>
    
    <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>


  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                clients_path, :class => 'btn btn-default' %>
<% end %>
