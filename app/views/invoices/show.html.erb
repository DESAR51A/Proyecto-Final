<%- model_class = Invoice -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:fec_invoice) %>:</strong></dt>
  <dd><%= @invoice.fec_invoice %></dd>
  <dt><strong><%= model_class.human_attribute_name(:num_ruc) %>:</strong></dt>
  <dd><%= @invoice.num_ruc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nom_cliente) %>:</strong></dt>
  <dd><%= @invoice.nom_cliente %></dd>
  <dt><strong><%= model_class.human_attribute_name(:val_invoice) %>:</strong></dt>
  <dd><%= @invoice.val_invoice %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reservation_id) %>:</strong></dt>
  <dd><%= @invoice.reservation_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              invoices_path, :class => 'btn btn-default'  %>
              
<%= link_to t('invoice_items', :default => "invoice items"),
              invoice_invoice_items_path(@invoice), :class => 'btn btn-default'  %>
              
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_invoice_path(@invoice), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              invoice_path(@invoice),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
