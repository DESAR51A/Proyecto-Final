<p id="notice"><%= notice %></p>

<h1>Listing Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Fec invoice</th>
      <th>Num ruc</th>
      <th>Nom cliente</th>
      <th>Val invoice</th>
      <th>Reservation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.fec_invoice %></td>
        <td><%= invoice.num_ruc %></td>
        <td><%= invoice.nom_cliente %></td>
        <td><%= invoice.val_invoice %></td>
        <td><%= invoice.reservation %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

