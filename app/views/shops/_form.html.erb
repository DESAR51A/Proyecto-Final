<%= simple_form_for @shop, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :code %>
  <%= error_span(@shop[:code]) %>
  <%= f.input :name %>
  <%= error_span(@shop[:name]) %>
  <%= f.input :address %>
  <%= error_span(@shop[:address]) %>
  <%= f.input :telephone %>
  <%= error_span(@shop[:telephone]) %>
  <%= f.input :email %>
  <%= error_span(@shop[:email]) %>
  <%= f.input :description %>
  <%= error_span(@shop[:description]) %>
  <%= f.association :employee %> 
  <%= error_span(@shop[:employee]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                shops_path, :class => 'btn btn-default' %>
<% end %>
