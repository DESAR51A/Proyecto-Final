<%- model_class = Singer -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Cantantes" %></h1>
</div>

<%= link_to t('.new', :default => "Agregar"), new_singer_path, :class => 'btn btn-primary' %>
<br>
<br>


<table id="datatable" class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nom_singer) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @singers.each do |singer| %>
      <tr>
        <td><%= link_to singer.id, singer_path(singer) %></td>
        <td><%= singer.nom_singer %></td>
        <td><%=l singer.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_singer_path(singer), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      singer_path(singer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

