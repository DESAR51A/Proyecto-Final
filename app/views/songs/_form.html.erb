<%= simple_form_for @song, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nom_song %>
  <%= error_span(@song[:nom_song]) %>
  <%= f.input :duracion %>
  <%= error_span(@song[:duracion]) %>
  <%= f.input :anio_song %>
  <%= error_span(@song[:anio_song]) %>
  <%= f.association :singer %>
  <%= error_span(@song[:singer]) %>
  <%= f.association :genre %>
  <%= error_span(@song[:genre]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                songs_path, :class => 'btn btn-default' %>
<% end %>
