<%- model_class = Song -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nom_song) %>:</strong></dt>
  <dd><%= @song.nom_song %></dd>
  <dt><strong><%= model_class.human_attribute_name(:duracion) %>:</strong></dt>
  <dd><%= @song.duracion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:anio_song) %>:</strong></dt>
  <dd><%= @song.anio_song %></dd>
  <dt><strong><%= model_class.human_attribute_name(:singer_id) %>:</strong></dt>
  <dd><%= @song.singer_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:genre_id) %>:</strong></dt>
  <dd><%= @song.genre_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              songs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_song_path(@song), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              song_path(@song),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
