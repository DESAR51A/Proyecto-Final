<%= simple_form_for @comment, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :client %>
  <%= error_span(@comment[:client_id]) %>
  <%= f.association :reservation %>
  <%= error_span(@comment[:reservation_id]) %>
  <%= f.input :comment %>
  <%= error_span(@comment[:comment]) %>
  <%= f.input :rating %>
  <%= error_span(@comment[:rating]) %>
  

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                comments_path, :class => 'btn btn-default' %>
<% end %>
